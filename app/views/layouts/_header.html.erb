<div id="header">
  <div class="container">
    <div id="logo" class="one-third column">
      <h1 class="logo">
        <a href="/">TV Control</a>
      </h1>
    </div>
    <div class="two-thirds column">
      <ul class="navigation">
        <li>
          <%= link_to 'Open VLC', 'udp://@:1234' %>
        </li>
        <li>
          <%= link_to 'Devices', devices_path %>
        </li>
        <li>
          <%= link_to 'Channels', channels_path %>
        </li>
      </ul>
    </div>
  </div>
</div>
<div id="titlebar">
  <% # This is so that IE7-9 will display the background better. It makes me sad. - EB %>
  <div class="background_container">
    <div class="container">
      <div class="row">
        <% if content_for? :page_title %>
          <h1 class="title"><%= yield :page_title %>
        </h1>
        <% end %>
        <%= yield :titlebar %>
      </div>
    </div>
  </div>
</div>
